<%- include("partials/header"); -%>
<h1>Home</h1>
<p><%= homeContent %></p>
<div>
  <% posts.forEach(function(post){ %> 
    <h1><%= post.postTitle %></h1>
    <p><%= post.postBody.substring(0,100) + " ..." %> <a href="/posts/<%= post.id %>">Read More</a> </p>
  <% }); %>
  <form action="/" method="post"><button type="submit" class="btn btn-primary btn-top">Compose New Post</button></form>
  
</div>
<%- include("partials/footer"); -%>
